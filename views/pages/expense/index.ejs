<!DOCTYPE html>
<html>
  <head>
    <link href="../build/styles.css" rel="stylesheet" />
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"
      integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"
      integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body>
    <div>
      <%- include('../../partial/nav/index'); %>
      <header class="bg-yello-500">
        <div
          class="flex items-center justify-between lg:max-w-7xl mx-auto py-14 lg:py-4 sm:px-6 lg:px-8 bg-yellow-500 border-b-2 border-white border-solid"
        >
          <h1 class="text-5xl lg:text-lg leading-6 font-semibold text-white">
            Expense
          </h1>
          <a href="/expense/new">
            <button class="mr-6 text-5xl lg:text-2xl text-white">
              <i class="fas fa-plus"></i>
            </button>
          </a>
        </div>
      </header>
      <main class="min-h-screen bg-green-500 lg:h-screen">
        <div
          class="py-8 lg:max-w-7xl lg:mx-auto lg:py-6 sm:px-6 lg:px-8 bg-green-500"
        >
          <!-- Content -->
          <div class="lg:px-4 lg:py-4 sm:px-0">
            <div
              class="min-h-screen border-4 border-dashed border-gray-200 rounded-lg h-96 bg-white h-auto"
            >
              <!-- Edit and Delete button section -->
              <% if(itemizedItems.length !== 0) { %>
              <div
                class="mt-20 mb-20 mx-12 lg:w-auto lg:my-4 lg:mx-10 text-right"
              >
                <a
                  href="/expense/edit?start=<%= startDate %>&end=<%= endDate %>"
                >
                  <button
                    class="text-6xl mx-7 lg:text-2xl lg:mx-2 text-yellow-500"
                  >
                    <i class="fas fa-pen"></i>
                  </button>
                </a>
                <button
                  class="text-6xl ml-7 lg:text-2xl lg:mx-2 text-red-600"
                  id="delete-btn"
                >
                  <i class="fas fa-trash-alt"></i>
                </button>
              </div>
              <% } %>
              <!-- Date selection section -->
              <div class="mt-20 mb-20 lg:w-auto lg:my-4 lg:mx-14 text-center">
                <form action="/expense" method="GET">
                  <label for="datepicker" class="text-6xl lg:text-lg"
                    >Date</label
                  >
                  <div
                    class="min-w-full my-8 lg:w-auto lg:m-auto md:w-6/12 lg:w-6/12"
                  >
                    <input
                      type="text"
                      id="datepicker"
                      class="text-5xl font-light py-3 border-4 lg:border-2 border-solid border-gray-200 text-center w-8/12 mt-2 rounded-lg"
                    />
                  </div>
                </form>
              </div>
              <!-- Summary Section -->
              <div class="mt-20 mb-20 lg:w-auto lg:my-4 lg:mx-14 text-center">
                <span class="text-6xl lg:text-lg">Summary</span>
                <div
                  class="flex flex-col min-w-full w-8/12 md:w-6/12 lg:w-6/12 m-auto mt-10"
                >
                  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                    <div
                      class="align-middle w-8/12 m-auto border-2 border-gray-200 lg:px-8"
                    >
                      <div
                        class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg"
                      >
                        <table
                          class="min-w-full w-8/12 table-auto divide-y divide-gray-200 text-center"
                        >
                          <thead class="bg-gray-50">
                            <tr>
                              <th
                                scope="col"
                                class="px-6 py-3 text-2xl lg:text-xs font-medium text-gray-500 uppercase tracking-wider"
                              >
                                Item
                              </th>
                              <th
                                scope="col"
                                class="px-6 py-3 text-2xl lg:text-xs font-medium text-gray-500 uppercase tracking-wider"
                              >
                                Amount
                              </th>
                            </tr>
                          </thead>
                          <tbody class="bg-white divide-y divide-gray-200">
                            <% if(itemizedItems.length != 0) { %> <%
                            itemizedItems.forEach((obj) => { %> <%
                            if(obj.category !== _.toLower("income")) {
                            obj.category = _.startCase(obj.category);
                            console.log(obj.category) %>
                            <tr>
                              <td
                                class="px-6 py-4 whitespace-nowrap text-2xl lg:text-sm font-medium text-gray-900"
                              >
                                <%= obj.category %>
                              </td>
                              <td
                                class="px-6 py-4 whitespace-nowrap text-2xl lg:text-sm text-gray-500"
                              >
                                $<%= obj.amount %>
                              </td>
                            </tr>
                            <% }%> <% }) %> <% } %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
      <%- include('../../partial/modal/delete') %>
    </div>
    <script>
      let expenseData = `<%- JSON.stringify(expenses); %>`;
    </script>
    <script src="/navJs/nav.js"></script>
    <script src="/js/util/datepicker.js"></script>
    <script src="/js/util/delete.js"></script>
    <script src="/js/util/mark.js"></script>
    <script src="/js/util/find.js"></script>
    <script src="/js/expense/find.js"></script>
    <script src="/js/expense/mark.js"></script>
    <script src="/js/expense/delete.js"></script>
  </body>
</html>
